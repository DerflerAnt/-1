<Window x:Class="SmartGreenhouseSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Симулятор системи керування теплицею" Height="600" Width="1000">
    <Grid>
        <!-- Головне меню -->
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Керування">
                <MenuItem Header="Параметри секції 1" Click="EditSection1"/>
                <MenuItem Header="Параметри секції 2" Click="EditSection2"/>
                <MenuItem Header="Параметри секції 3" Click="EditSection3"/>
                <MenuItem Header="Параметри секції 4" Click="EditSection4"/>
            </MenuItem>
            <MenuItem Header="Налаштування">
                <MenuItem Header="Додати культуру" Click="AddPlant_Click"/>
                <MenuItem Header="Вихід" Click="ExitApp"/>
            </MenuItem>
        </Menu>

        <!-- Панель для відображення карти теплиці -->
        <DockPanel Margin="10,40,10,10">
            <Grid DockPanel.Dock="Left" Width="300">
                <StackPanel>
                    <!-- Загальний статус теплиці -->
                    <TextBlock Text="Статус теплиці:" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Name="GreenhouseStatus" Text="У теплиці немає культур." TextWrapping="Wrap" Margin="0,0,0,10"/>
                    <MenuItem Header="Автоматичний полив" Click="AutoWaterPlants_Click"/>
                    <!-- Кнопки для додавання та збору культур -->
                    <Button Content="Додати культуру" Width="150" Click="AddPlant_Click" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    <Button Content="Збирати культуру" Width="150" Click="HarvestPlant_Click" HorizontalAlignment="Center" Margin="0,10,0,0"/>

                    <!-- Довідка про колір культури -->
                    <TextBlock Text="Довідка про колір культури:" FontWeight="Bold" Margin="0,20,0,5"/>
                    <TextBlock Text="Жовтий: культура росте."/>
                    <TextBlock Text="Червоний: неоптимальні умови."/>
                    <TextBlock Text="Зелений: готова до збору."/>
                </StackPanel>
            </Grid>

            <!-- Карта теплиці -->
            <Grid Name="GreenhouseMap" DockPanel.Dock="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Секція 1 -->
                <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="2">
                    <Canvas Name="Section1" Background="#FFDDEEFF"/>
                </Border>

                <!-- Секція 2 -->
                <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="2">
                    <Canvas Name="Section2" Background="#FFCCE6FF"/>
                </Border>

                <!-- Секція 3 -->
                <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="2">
                    <Canvas Name="Section3" Background="#FFE6F7FF"/>
                </Border>

                <!-- Секція 4 -->
                <Border Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="2">
                    <Canvas Name="Section4" Background="#FFB3E6FF"/>
                </Border>
            </Grid>
        </DockPanel>
    </Grid>
</Window>